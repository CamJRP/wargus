#!/usr/bin/make -f
# debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.
# GNU Copyright 2002-2004 by David Martínez Moreno.

# Do you want verbosity...? Uncomment this.
#export DH_VERBOSE=1

export LC_ALL=C

# We have to honor DEB_BUILD...
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
CONFIGURE_FLAGS += --enable-profile
endif

DEB_BUILD_GNU_CPU ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_CPU)

export CFLAGS

build: 
	dh_testdir
	$(MAKE)

clean: 
	dh_testdir
	dh_testroot

	$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	svn export scripts $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/scripts  --force
	install -m0755 pudconvert $(CURDIR)/debian/wargus/usr/games
	install -m0755 wartool $(CURDIR)/debian/wargus/usr/games
	install -m0755 build.sh $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus
	install -m0755 debian/wrapper $(CURDIR)/debian/wargus/usr/games/wargus
	install -m0644 contrib/wargus.png $(CURDIR)/debian/wargus/usr/share/icons
	install -m0644 debian/wargus.desktop $(CURDIR)/debian/wargus/usr/share/applications

	install -m0644 contrib/cross.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui/cursors
	install -m0644 contrib/red_cross.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/missiles
	install -m0644 contrib/mana.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/mana2.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/health.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/health2.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/food.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/score.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui
	install -m0644 contrib/ore,stone,coal.png $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/graphics/ui

# Build architecture-independent files here.
binary-indep: build install

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	dh_installdocs
	dh_installmenu
	dh_installman
	dh_desktop
	dh_installchangelogs
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install

